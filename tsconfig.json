{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "outDir": ".",
    "baseUrl": "."
  },
  "include": [
    "bin/**/*.ts",
    "controllers/**/*.ts",
    "core/**/*.ts",
    "errors/**/*.ts",
    "middleware/**/*.ts",
    "models/**/*.ts",
    "responses/**/*.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "test/**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

